<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Welcome to Squiddit</title>
  <!-- <link rel="stylesheet" href="css/style.css"> -->
</head>
<body>

  <header id="header" class="">

    <h1>Squiddit</h1>
    <% if (req.session.user) { %>
    <p>You are logged in as <%= req.session.user %>  <a href="/squiddit/logout">LOG OUT</a></p>
    <% } else { %>
    <a href="/squiddit/login">LOGIN/SIGN UP</a>
    <% } %>

  </header><!-- /header -->

  <main>

  <% if (req.session.user) { %>
    <a href="/squiddit/new">ADD A NEW TOPIC</a><br>
  <% } else { %>
    <p><i>You must be logged in to post</i></p>
  <% } %>

    <h1>Topics</h1>
    <% topics.forEach((topic) => { %>
    <div class="topic">
      <h3><%= topic.subject %></h3>
      <p><%= topic.content %><br>
      VOTES: <%= topic.votes %> - COMMENTS:
      <% count.forEach((row) => {
        if (row.topic_id === topic.id) { %>
      <%= row.count %><% }}) %><br>
      Posted by: <%= topic.username %></p>
      <form method="POST" action="/Squiddit/<%= topic.id %>?_method=put">
        <!-- <input type="text" name="redir" value="<%= topic.id %>"" style="display : none" /> -->
        <input type="submit" value="VOTE" />
      </form>
      <% if (topic.username === req.session.user) { %>
      <form method="POST" action="/Squiddit/<%= topic.id %>?_method=delete">
        <!-- <input type="text" name="redir" value="<%= topic.id %>"" style="display : none" /> -->
        <input type="submit" value="DELETE" />
      </form>
      <% } %>
      <a href="/squiddit/<%= topic.id %>">SEE MORE</a>

    </div>
    <% }) %>
  </main>
</body>
</html>
