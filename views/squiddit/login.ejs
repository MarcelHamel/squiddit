<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>

    <!-- JS links -->
    <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script src="https://use.fontawesome.com/f1ff63a0b2.js"></script>

    <!-- CSS links -->
    <link rel="stylesheet" type="text/css" href="/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="/css/materialize.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

  </head>
  <body>

    <% include ../partials/nav %>

    <main>

      <!-- Placeholder for error message for invalid user -->
      <% if (req.query.invalid === "user") { %>
      <div class="warning">
        <p>Invalid! User already exists with that name</p>
      </div>
      <% } %>
      <% if (req.query.invalid === "badlogin") { %>
      <div class="warning">
        <p>Invalid Username or Password!</p>
      </div>
      <% } %>

      <!-- Login Controls -->
      <div class="login-controls">
        <h4>Login Below</h4>
          <form method="POST" action="/users/verify">
            <input type="text" name="email" placeholder="Username" />
            <input type="password" name="password" placeholder="Password" />
            <button type="submit" class="btn purple darken-2 right">Login</button>
          </form>
      </div>

      <!-- Sign Up Controls -->
      <div class="login-controls">
        <h4>Not A Member? Sign-up!</h4>
          <form method="POST" action="/users/">
            <input type="text" name="newUser[username]" placeholder="Username" /><br />
            <input type="text" name="newUser[email]" placeholder="E-Mail" /><br />
            <input type="password" name="newUser[password]" placeholder="Password" /><br />
            <button type="submit" class="btn purple darken-2 right">Sign Up</button>
          </form>
      </div>

    </main>
    <% include ../partials/footer %>
  </body>
</html>
